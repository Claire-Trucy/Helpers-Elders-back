{% extends 'base.html.twig' %}

{% block title %}Annonce détaillée{% endblock %}

{% block body %}
    <h1>Annonce détaillée</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Prix / heure</th>
                <td>{{ post.hourlyRate }} €</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ post.workType ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ post.postalCode }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ post.radius }} km</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifiée le</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_post_index') }}">back to list</a>

    <a href="{{ path('app_back_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('back/post/_delete_form.html.twig') }}
{% endblock %}
